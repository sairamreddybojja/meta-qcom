[Unit]
Description=Audio adsprpc Service
Requires=dev-fastrpc\x2dadsp\x2dsecure.device
After=dev-fastrpc\x2dadsp\x2dsecure.device
SourcePath=/usr/bin/audioadsprpcd

[Service]
User=system
Group=system
Restart=on-failure
ExecStart=/usr/bin/audioadsprpcd audiopd

[Install]
WantedBy=multi-user.target
